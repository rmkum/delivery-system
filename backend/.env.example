# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=delivery_security
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MQTT Configuration
MQTT_BROKER=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=delivery-security-backend

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_UNLOCK_SECRET=unlock-token-secret-change-this-in-production
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800
JWT_UNLOCK_TTL=60

# CORS Configuration
CORS_ORIGINS=http://localhost:3001,http://localhost:3002

# Frontend URLs
FRONTEND_URL=http://localhost:3001
DASHBOARD_URL=http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=10

# Email Configuration (for magic links)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@delivery-security.com

# SMS Configuration (for OTP)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Device Security
DEVICE_CERT_PATH=./certs
CA_PRIVATE_KEY_PATH=./certs/ca-key.pem
CA_CERT_PATH=./certs/ca-cert.pem
CERT_VALIDITY_DAYS=1095

# Security Settings
ENABLE_TLS=false
REQUIRE_DEVICE_CERTS=true
CLOCK_SKEW_TOLERANCE=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=false
LOG_FILE_PATH=./logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Business Logic
MAX_UNLOCK_ATTEMPTS=3
UNLOCK_COOLDOWN_MS=300000
SLOT_RESERVATION_TTL=1800
EVENT_RETENTION_DAYS=90
MAX_SLOTS_PER_SHELF=12

# External Integrations
UBER_EATS_ENABLED=false
UBER_EATS_API_KEY=your-uber-eats-api-key
DELIVEROO_ENABLED=false
DELIVEROO_API_KEY=your-deliveroo-api-key
JUST_EAT_ENABLED=false
JUST_EAT_API_KEY=your-just-eat-api-key