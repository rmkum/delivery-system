# Standalone Development Configuration (No External Dependencies)
NODE_ENV=development
PORT=3000

# Database Configuration - SQLite for standalone
DB_TYPE=sqlite
DB_PATH=./data/delivery_security.db

# In-Memory Redis Configuration
REDIS_TYPE=memory

# No MQTT for standalone demo
MQTT_ENABLED=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_UNLOCK_SECRET=unlock-token-secret-change-this-in-production
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800

# API Keys
API_KEY_SALT=your-api-key-salt-change-this-in-production

# Encryption
ENCRYPTION_KEY=your-32-char-encryption-key-here

# Magic Link Configuration
MAGIC_LINK_TTL=300
MAGIC_LINK_SECRET=your-magic-link-secret-change-this

# Device Configuration
DEVICE_CERT_PATH=./certs
DEVICE_TOKEN_TTL=86400

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_TTL=3600

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3001,http://localhost:3002

# Audit Configuration
AUDIT_RETENTION_DAYS=90

# Notification Configuration
EMAIL_ENABLED=false
SMS_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=false